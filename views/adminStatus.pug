extends layout 

block header
  div(class='header')
    h1
      a(href=(admin ? '/admin' : '/')) My Blog
    div(class='adminTools')
      div(class='adminTool')
        a(href='/') Back To Home

block content
  div(class='postCard')
    h1= title 
    if admin 
      p You have admin status
    else 
      p You DO NOT have admin status

    if error 
      p Error: #{error}

    if admin 
      form(method='post' action='')
        div(class='postCardDetails')
          label Revoke admin status?
          input(type='hidden' name='revoke' value='revoke')
          button(type='submit')
            h4 Revoke
    else
      form(method='post' action='')
        div(class='postCardDetails')
          div(class='formInput')
            label(for='password') What's the super secret password?
            input(type='text' name='password' id='password')
          button(type='submit')
            h4 Submit
